<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>login</title>
    <style type="text/css">
        #txtname,#txtpass{
            width: 450px;
            height: 40px;
            border: solid 1px black;
            font-size: 1.5em;
        }
        table{
            border: solid 2px;
            margin: auto;
            width: 80%;
            height: 200px;
            margin-top:200px ;
        }
        #btnlogin,#btnregist{
            width: 260px;
            height: 40px;
            background-color: #555555;
            color: white;
        }
        [type="checkbox"],label{
            width: 1em;
            height: 1em;
            font-size: 2em;
        }
        #result{
            width: 600px;
            height: 80px;
            border: solid 1px black;
            margin: auto;
            display: none;
        }
    </style>
    <!--<script src="../util/MD5.js"></script>-->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.0.js">
    </script>
    <script>
        $(function(){
            $('#btnlogi').click(function(){
                $.ajax(
                        {
                            type:'GET',
                            url:'http://localhost:8080/login',
                            data:{'txtname':$('#txtname').val(),'txtpass':$('#txtpass').val()},
//                            表单序列化
//                            data:$('#myform').serialize(),
                            timeout:5000,
                            success:function(data){
                                alert(data);
                            },
                            error:function(){
                                alert('error');
                            }

                        }
                )
            })

            $('#btnregis').click(function(){
                $.ajax(
                        {
                            type:'GET',
                            url:'http://localhost:8080/regist',
                            data:{'txtname':$('#txtname').val(),'txtpass':$('#txtpass').val()},
//                            表单序列化
//                            data:$('#myform').serialize(),
                            timeout:5000,
                            success:function(data){
                                alert(data);
                            },
                            error:function(){
                                alert('error');
                            }

                        }
                )
            })

        })
    </script>

</head>
<body>

<div id="result">
    result!!!
</div>
<form action="http://localhost:3001/login/user_manage" name="myform" method="post" id="myform" onsubmit="return check()">
    <table>
        <tr>
            <td width="30%" align="right">NAME</td>
            <td><input type="text"  name="sno" id="txtname"  required/></td>
        </tr>
        <tr>
            <td align="right">PASSWORD</td>
            <td><input type="password" maxlength="6" name="password" id="txtpass" required/></td>
        </tr>
        <tr>
            <td align="right">
            </td>
            <td>
                <input type="checkbox" id="rempass" name="rempass" value="1"/><label for="rempass">记住密码</label>
                <input type="checkbox" id="autologin" name="autologin" value="2"/> <label for="autologin">自动登录</label>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center">
                <input type="submit" value="LGOIN" id="btnlogin"/>
                <input type="button" value="REGIST" id="btnregist"/>
            </td>
        </tr>
    </table>

</form>
</body>
</html>

